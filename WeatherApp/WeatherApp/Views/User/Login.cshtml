@{
    ViewBag.Title = "Login";

    if (@ViewBag.Message != null)
    {
        <div class="alert alert-success my-alert-message-mvc">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong style="color:#0E3047;">@ViewBag.Message</strong>
        </div>
    }

    if (TempData["message"] != null)
    {
        <div class="alert alert-success my-alert-message-mvc">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <strong style="color:#0E3047;">@TempData["Message"]</strong>

        </div>
    }
}

<form class="form-horizontal form-signin" action="@Url.Action("DoLogin","User")" method="post">
    <h2 class="form-signin-heading">Inicie sesión:</h2>
    <br />

    <div class="form-group">
        <label class="control-label col-md-5" for="email">Correo Electrónico:</label>
        <div class="col-md-7">
            <input type="text" class="form-control" name="email" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5" for="email">Contraseña:</label>
        <div class="col-md-7">
            <input type="password" class="form-control" name="pass" required>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <button type="submit" class="btn btn-default">Ingresar</button>
        </div>
    </div>
</form>

<br />
<br />

<h4>
    @Html.ActionLink("Volver al Inicio", "Index", "Home")
</h4>

@section Scripts {
    <script>

        //Si existe el botón en la pantalla, que se oculte después de 3 segundos
        if ($('.my-alert-message-mvc').length) {
            setTimeout(function () { $('.my-alert-message-mvc').slideUp("slow") }, 3000);
        };
    </script>
}