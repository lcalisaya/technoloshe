@{
    ViewBag.Title = "SignUp";
}

<h2>Registrese creando su cuenta:</h2>

<form class="form-horizontal" action="@Url.Action("SignUp","User")" method="post">
    <div class="form-group">
        <label class="control-label col-md-5" for="email">Nombre:</label>
        <div class="col-md-7">
            <input type="text" class="form-control" placeholder="Nombre" name="firstName" required>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-5" for="email">Apellido:</label>
        <div class="col-md-7">
            <input type="text" class="form-control" placeholder="Apellido" name="lastName" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5" for="email">Email:</label>
        <div class="col-md-7">
            <input type="email" class="form-control" placeholder="Email" name="email" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5" for="pwd">Contraseña:</label>
        <div class="col-md-7">
            <input id="password" type="password" class="form-control" placeholder="Contraseña" name="pass" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-5" for="pwd">Reingresar Contraseña:</label>
        <div class="col-md-7">
            <input id="confirm-password" type="password" class="form-control" placeholder="Reingresar contraseña" name="confirm-pass" required>
            <span id='message'></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5 col-md-7">
            <button type="submit" class="btn btn-default">Crear cuenta</button>
        </div>
    </div>

</form>

<h4>
    @Html.ActionLink("Volver al Inicio", "Index", new { controller = "Home", id = @ViewBag.UserID })
</h4>

@section Scripts{
    <script>

        //Se controla si las contraseñas ingresadas coniciden o no
        $('#password, #confirm-password').on('keyup', function () {
            if ($('#password').val() == $('#confirm-password').val()) {
                $('#message').html('Las contraseñas coinciden').css('color', 'green');
            } else
                $('#message').html('Las contraseñas no coinciden').css('color', 'red');
        });
    </script>
}
