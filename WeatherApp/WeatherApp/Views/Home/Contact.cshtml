@{
    ViewBag.Title = "Contacto";
}

<h2>Contactese!</h2>

<form class="form-horizontal form-signin" action="@Url.Action("SendContactToAdministrator", "Home")" method="post">

    <h3 class="form-signin-heading">Puede enviarnos un comentario, consulta o sugerencia:</h3>
    <div class="form-group">
        <label class="control-label col-sm-2" for="name">Nombre:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Dirección de Email:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="email" required>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="message">Mensaje: </label>
        <div class="col-sm-10">
            <textarea name="message" maxlength="140" class="form-control" rows="5" required></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enviar contacto</button>
        </div>
    </div>
</form>


